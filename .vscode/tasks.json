{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile current file",
      "type": "shell",
      "command": "cd ${fileDirname} && lilypond ${file}",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch file for changes and reload",
      "type": "shell",
      "command": "fswatch -o ${workspaceFolder}/${fileBasenameNoExtension}.pdf | xargs -n1 -I {} osascript -e 'tell application \"Arc\" to repeat with W in windows' -e 'reload (every tab in W whose URL contains \"${fileBasenameNoExtension}\")' -e 'end repeat'"
    }
  ]
}
